@model List<SchoolModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table>
    <thead>
        <tr>
            <th>Schulkennzahl</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SchoolModel school in Model)
        {
            <tr>
                <td>@school.Id</td>
                <td>@school.Name</td>
                <td>
                    <form asp-controller="School" asp-action="EditSchool" method="get" asp-route-Id="@school.Id">
                        <button type="submit">Bearbeiten</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
